<body>
  <header class="header">
    <h1 class="logo">Memories</h1>
  </header>

  <h1 class="form">プロフィールの編集</h1>
<div class="row form">
  <div class="col-lg-12">
    <%= form_for current_user do |f| %>
      <h2>登録情報</h2>
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.label :"苗字:" %>
          <%= f.text_field :family_name, placeholder: "姓", class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= f.label :"名前:" %>
          <%= f.text_field :first_name, placeholder: "名", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.label :"苗字（かな）:" %>
          <%= f.text_field :family_name_kana, placeholder: "セイ", class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= f.label :"名前（かな）:" %>
          <%= f.text_field :first_name_kana, placeholder: "メイ", class: "form-control" %>
        </div>
      </div>
       <div class="form-group">
         <%= f.label :"ニックネーム:" %>
         <%= f.text_field :nickname, placeholder:"ニックネーム", class: "form-control" %>
       </div>
       <div class="form-group">
         <%= f.label :"お誕生日:" %>
         <%= f.date_field :birthday, class:"form-control" %>
       </div>
       <div class="form-group">
         <%= f.label :"性別:" %>
         <%= f.select :gender, [["男の子","男の子"],["女の子","女の子"]] %>
       </div>
      <div class="form-group">
        <%= f.submit "送信", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
    <%= link_to "戻る", shots_path %>
  </div>
</div>
</body>