<body>
  <header class="header">
    <h1 class="logo">Memories</h1>
  </header>
<h1 class="form">思い出詳細</h1>
<div class="col-lg-12">
<h1 class="shot-title"><%= @shot.title %></h1>
<hr>
<div class="shot-date"><%= @shot.date.strftime("%Y年%m月%d日 %H:%M") %></div>
<% if @shot.image.attached? %>
<div class="image-tags"><%= image_tag @shot.image, :size => '300x350' %></div>
<% end %>
<div class="shot-text"><%= simple_format @shot.text %></div>
 <div class="show-btns">
  <div class="show-btn"><%= link_to "削除", "/shots/#{@shot.id}", method: :delete  %></div>
  <div class="show-btn"><%= link_to "編集", "/shots/#{@shot.id}/edit", method: :get  %></div>
  <div class="show-btn"><%= link_to "戻る", shots_path %></div>
  <div class="bottom"></div>
 </div>
</div>
</body>